<div class="row">
  <div class="large-12 small-12 columns">
    <%= link_to t(:trips_list), trips_path, class: 'radius small button' %>
  </div>
  <div class="large-12 small-12 columns">
    <h1><%= "#{t(:edit_trip, scope: :trip)}: #{@trip.title}" %></h1>
  </div>
  <div class="large-12 small-12 columns">
    <%= render 'form' %>
  </div>
  <div class="large-12 small-12 columns">
    <%= link_to t(:back), trips_path, class: 'radius small button' %>
    <%= link_to t(:delete), trip_path(@trip), method: :delete, data: {confirm: t(:sure_to_delete, scope: :trip)}, class: 'radius small button' %>
  </div>
</div>