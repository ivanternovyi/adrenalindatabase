<%= form_for(@trip) do |f| %>
  <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2>Помилки у колькості <%= @trip.errors.count %> було знайдено при збереженні данних:</h2>

      <ul>
      <% @trip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Назва туру' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, 'Опис туру' %><br />
    <%= f.text_area :description, cols: 50, rows: 5 %>
  </div>
  
  <h3>Дати туру</h3>
  <%= f.fields_for :trip_dates do |builder| %>
    <%= render 'trips/fields/trip_date_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Додати дату", f, :trip_dates, :trips %>
  
  <% if !@trip.trip_rules.nil? %>
    <div class="field">
      <h3>Правила туру</h3>
      <% TripRule.all.each do |trip_rule| %>
        <%= check_box_tag 'trip[trip_rule_ids][]', trip_rule.id, @trip.trip_rules.include?(trip_rule), id: "ttr_#{trip_rule.id}" %><%= label_tag "ttr_#{trip_rule.id}", trip_rule.name %> <br />
      <% end %>
    </div>
  <% end %>
  <p>
    <div class="actions">
      <%= f.submit 'Створити тур' %>
    </div>
  </p>
<% end %>
