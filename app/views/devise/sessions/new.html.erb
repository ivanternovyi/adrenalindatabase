<div class="row login-area">
	<div class="large-5 large-centered columns">
		<div class="panel radius">
			<h2 class="title-center">Вхід</h2>
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div><%= f.label :auth_field, 'Номер карти або e-mail' %>
			  <%= f.text_field :auth_field, :autofocus => true %></div>

			  <div><%= f.label :password, 'Пароль' %>
			  <%= f.password_field :password %></div>

			  <% if devise_mapping.rememberable? -%>
			    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, 'Запам\'ятати мене', id: 'label-remember-me' %></div>
			  <% end -%>

			  <div><%= f.submit "Вхід" %></div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>