<div class="grid_6 prefix_6 log_in">
	<h2>Вход</h2>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div><%= f.label :card_number, 'Номер карты или e-mail' %><br />
	  <%= f.text_field :card_number, :autofocus => true %></div>

	  <div><%= f.label :password, 'Пароль' %><br />
	  <%= f.password_field :password %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, 'Запомнить меня' %></div>
	  <% end -%>

	  <div><%= f.submit "Войти" %></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
<div class="clear"></div>