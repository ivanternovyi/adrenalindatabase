<fieldset>
	<p>
		<%= f.label :payment_date, 'Дата оплаты' %><br />
		<%= f.date_select :payment_date, { include_blank: true, order: [:day, :month, :year], start_year: date_begin_cards, end_year: date_end_cards, use_month_names: ['Січень', 'Лютий', 'Березень', 'Квітень', 'Травень', 'Червень', 'Липень', 'Серпень', 'Вересень', 'Жовтень', 'Листопад', 'Грудень'], include_blank: true} %>
	</p>
	<p>
		<%= f.label :payment, 'Сумма платежа' %><br />
		<%= f.text_field :payment %>
	</p>
	<p>
		<%= f.label :paying_method, 'Метод проплати' %><br />
		<%= f.text_field :paying_method %>
	</p>
	<%= f.hidden_field :_destroy %>
	<%= link_to 'Удалить', '#', class: "remove_fields" %>
</fieldset>