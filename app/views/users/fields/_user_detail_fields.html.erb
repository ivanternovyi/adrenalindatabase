<legend>Особисті данні</legend>
  <%= f.label :surname, 'Прізвище' %>
  <%= f.text_field :surname %>

  <%= f.label :name, 'Ім\'я' %>
  <%= f.text_field :name %>

  <%= f.label :mid_name, 'По-Батькові' %>
  <%= f.text_field :mid_name, size: 70 %>

  <%= f.label :birthday, 'Дата народження' %>
  <%= f.text_field :birthday, value: date_to_text(f.object.birthday), class: 'datefield' %>
  <%= input_hint_text 'Дата народження у форматі: День-Місяць-Рік. Наприклад 21-03-1980' %>

  <%= f.label :post_address, 'Поштова адреса' %>
  <%= f.text_area :post_address, cols: 40, rows: 2 %>
  <%= input_hint_text 'Обов\'язково. Необхідно для отримання повідомлень від ВГО «Адреналін», в т.ч. картки «I`m Adrenalin»' %>

  <%= f.label :comment, 'Коментар' %>
  <%= f.text_area :comment, cols: 40, rows: 2 %>
