<%= form_tag users_path, method: :get do %>
  <%= label_tag :s_card_barcode, 'Штрих-код картки' %>
  <%= text_field_tag :s_card_barcode, params[:s_card_barcode], autofocus: true %>

  <%= label_tag :s_surname, 'Прізвище' %>
  <%= text_field_tag :s_surname, params[:s_surname] %>

  <%= radio_button_tag :s_not_revised, 'all', params[:s_not_revised].nil? || params[:s_not_revised] == 'all' %>
  <%= label_tag :s_not_revised_all, 'Всі дані', class: 'checkbox-label-inline' %>
  <br />
   <%= radio_button_tag :s_not_revised, 'true', (!params[:s_not_revised].nil? && params[:s_not_revised] == 'true') %>
  <%= label_tag :s_not_revised_true, 'Неперевірені дані', class: 'checkbox-label-inline' %>
  <br />
  <%= radio_button_tag :s_not_revised, 'false', (!params[:s_not_revised].nil? && params[:s_not_revised] == 'false') %>
  <%= label_tag :s_not_revised_false, 'Перевірені дані', class: 'checkbox-label-inline' %>

  <%= submit_tag 'Шукати', name: nil, class: 'radius small button' %>
<% end %>