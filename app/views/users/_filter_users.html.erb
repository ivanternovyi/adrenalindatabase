<%= form_tag users_path, method: :get do %>
  <p>
    <%= label_tag :s_card_number, 'Номер картки' %><br />
    <%= text_field_tag :s_card_number, params[:s_card_number] %>
  </p>
  <p>
    <%= label_tag :s_surname, 'Прізвище' %> <br />
    <%= text_field_tag :s_surname, params[:s_surname] %>
  </p>
  <p>
    <%= radio_button_tag :s_not_revised, 'all', params[:s_not_revised].nil? || params[:s_not_revised] == 'all' %>
    <%= label_tag :s_not_revised_all, 'Всі дані' %>
    <br />
     <%= radio_button_tag :s_not_revised, 'true', (!params[:s_not_revised].nil? && params[:s_not_revised] == 'true') %>
    <%= label_tag :s_not_revised_true, 'Неперевірені дані' %>
    <br />
    <%= radio_button_tag :s_not_revised, 'false', (!params[:s_not_revised].nil? && params[:s_not_revised] == 'false') %>
    <%= label_tag :s_not_revised_false, 'Перевірені дані' %>
  </p>

<%= submit_tag 'Шукати', name: nil %>
<% end %>