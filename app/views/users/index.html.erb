<div class="row" id="members-list-area">
  <div class="large-3 small-12 columns hide-for-print">
    <fieldset>
      <legend>Пошук</legend>
      <%= render 'filter_users' %>
    </fieldset>
  </div>
  <div class="large-9 small-12 columns">
    <h1>Список членів організації</h1>
  </div>
  <div class="large-9 small-12 columns hide-for-print">
    <div class="pagination-centered">
      <%= will_paginate @users %>
    </div>
  </div>
  <div class="large-9 small-12 columns">
    <table id="members-list">
      <thead>
        <th><%= sortable 'reg_timestamp', 'Реєстр.' %></th>
        <th><%= sortable 'surname', 'Прізвище Ім\'я По-Батькові' %></th>
        <th> № карти</th>
        <th><%= sortable 'birthday', 'Дата нар.' %></th>
        <th><%= sortable 'town_office', 'Пр-ство' %></th>
      </thead>
      <tbody>
      <%= render @users %>
      </tbody>
    </table>
  </div>
  <div class="large-12 small-12 columns hide-for-print">
    <div class="pagination-centered">
      <%= will_paginate @users %>
    </div>
  </div>
</div>