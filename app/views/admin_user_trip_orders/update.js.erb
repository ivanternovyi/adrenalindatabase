<% if @user_trip_date.errors.any? %>
  $('div#trip-date-order-' + <%= @user_trip_date.id %>).html(<%= render 'user_trip_data_fields', trip_dat: @user_trip_date %>);
  $('#price-field-' + <%= @user_trip_date.id %>).closest('form').css('background-color', '#F00');
  $('#price-field-' + <%= @user_trip_date.id %>).val(<%= @user_trip_date.price %>);
<% else %>
  $('div#trip-date-order-' + <%= @user_trip_date.id %>).html('' + <%= render 'user_trip_data_fields', trip_dat: @user_trip_date %>);
  $('#price-field-' + <%= @user_trip_date.id %>).closest('form').css('background-color', '#0F0');
  $('#price-field-' + <%= @user_trip_date.id %>).closest('form').animate({'background-color': '#FFF'}, 2000);
<% end %>